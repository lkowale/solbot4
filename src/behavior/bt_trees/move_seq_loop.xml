<!--
  Behavior Tree for running MoveSequence action in an infinite loop.
  The sequence file path is passed via blackboard variable {sequence_file}.
-->
<root BTCPP_format="4" main_tree_to_execute="MainTree">
  <BehaviorTree ID="MainTree">
    <!-- Repeat forever (-1 means infinite) -->
    <Repeat num_cycles="-1">
      <Sequence name="MoveSequenceLoop">
        <!-- Execute the MoveSequence action -->
        <MoveSequence
          sequence_file="{sequence_file}"
          segment_idx="0"
          segment_distance_traveled="0.0"
          error_code="{move_seq_error_code}"
        />
        <!-- Small delay between loops to prevent tight spinning on failure -->
        <Delay delay_msec="1000">
          <AlwaysSuccess/>
        </Delay>
      </Sequence>
    </Repeat>
  </BehaviorTree>
</root>
